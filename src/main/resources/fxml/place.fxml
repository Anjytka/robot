        <BorderPane style="-fx-fill-width: inherit; -fx-fill-height: inherit;">
            <left>
                <Pane fx:id="allCells" style="-fx-border-color: #333; -fx-border-style: solid; -fx-border-width: 1px; -fx-background-color: #FFF">
                    <!--Pane contains Canvas with all elements, which is added from code in PlaceController-->

                    <!--<Canvas fx:id="place" width="400" height="400" style="-fx-background-color: ghostwhite; -fx-border-color: #333333"-->
                    <!--translateX="Infinity" translateY="Infinity" layoutX="0" layoutY="0">-->
                    <!--</Canvas>-->
                </Pane>
            </left>
            <right>
                <VBox spacing="10" styleClass="panel">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <Pane fx:id="preview">
                        <!--Pane contains Canvas with current element, which is added from code in PlaceController-->
                    </Pane>
                    <Region prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" />
                    <Button text="Запуск" alignment="BOTTOM_CENTER" onAction="#startGrouping"/>
                </VBox>
            </right>
        </BorderPane>

